<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/upper_half_login"
        android:layout_marginBottom="50dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">


            <ImageButton
             android:id="@+id/attendance"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_logo"
                android:layout_gravity="center_horizontal"
                android:scaleType="fitXY"
                android:src="@drawable/attendance_logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attendance"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/leave"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/circle_logo"
                android:scaleType="fitXY"
                android:src="@drawable/leave_logo" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:textColor="#fff"
                android:layout_gravity="center"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_logo"
                android:src="@drawable/work_progress_logo"
                android:id="@+id/progress"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work-Progress"
                android:textSize="12dp"
                android:layout_marginTop="15dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffffff"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_logo"
                android:src="@drawable/appraisal_logo"
                android:id="@+id/appraisal"
                android:scaleType="fitXY"
                android:layout_gravity="center_horizontal"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Appraisal"
                android:layout_marginTop="15dp"
                android:textSize="12dp"
                android:fontFamily="sans-serif"
                android:textColor="#ffff"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/edittext"
                android:layout_width="170dp"
                android:layout_height="150dp"
                android:layout_marginLeft="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/ll_background"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:hint="Remarks...."
                android:textColor="#000" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50dp"
                android:orientation="vertical">

        <Button
            android:id="@+id/check_in_out"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:elevation="10dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:textSize="15dp" />

                <TextClock
                    android:id="@+id/text_clock"
                    android:layout_width="120dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="30dp"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="50dp"
                    android:elevation="10dp"
                    android:format24Hour="hh:mm:ss a"
                    android:gravity="center"
                    android:textSize="15dp" />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>